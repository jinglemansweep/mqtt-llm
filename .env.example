# MQTT Configuration
MQTT_BROKER=mosquitto.local
MQTT_PORT=1883
MQTT_USERNAME=user
MQTT_PASSWORD=password
MQTT_CLIENT_ID=my-client-id
MQTT_SUBSCRIBE_TOPIC=meshcore/message/channel/0
MQTT_SUBSCRIBE_PATH=$.payload.text
MQTT_PUBLISH_TOPIC=meshcore/command/send_chan_msg
MQTT_PUBLISH_TEMPLATE='{"channel": 0, "message": "AI: {response}"}'
MQTT_QOS=0
MQTT_RETAIN=false
MQTT_SANITIZE_RESPONSE=true
MQTT_TRIGGER_PATTERN=@ai

# Ollama Configuration
OLLAMA_API_URL=http://ollama.local:11434
OLLAMA_API_KEY=
OLLAMA_MODEL=gemma3:4b
OLLAMA_SYSTEM_PROMPT="/no_think Responses MUST be less than 100 characters"
OLLAMA_TIMEOUT=30.0
OLLAMA_MAX_TOKENS=50

# Application Configuration
LOG_LEVEL=INFO