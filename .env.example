# MQTT Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=
MQTT_SUBSCRIBE_TOPIC=ai/input
MQTT_SUBSCRIBE_PATH=$.text
MQTT_PUBLISH_TOPIC=ai/output
MQTT_PUBLISH_TEMPLATE={response}
MQTT_QOS=0
MQTT_RETAIN=false
MQTT_SANITIZE_RESPONSE=false
MQTT_TRIGGER_PATTERN=@ai
MQTT_USE_TLS=false
MQTT_TLS_CA_CERTS=
MQTT_TLS_CERTFILE=
MQTT_TLS_KEYFILE=
MQTT_TLS_INSECURE=false

# OpenAI-Compatible API Configuration
# Default: Ollama (local inference)
OPENAI_API_URL=http://localhost:11434
OPENAI_API_KEY=
OPENAI_MODEL=llama3
OPENAI_SYSTEM_PROMPT=You are a helpful assistant.
OPENAI_TEMPERATURE=
OPENAI_TIMEOUT=30.0
OPENAI_MAX_TOKENS=1000
OPENAI_SKIP_HEALTH_CHECK=false

# For OpenRouter (uncomment and configure)
# OPENAI_API_URL=https://openrouter.ai/api
# OPENAI_API_KEY=sk-or-your-key-here
# OPENAI_MODEL=anthropic/claude-3-haiku

# For OpenAI (uncomment and configure)
# OPENAI_API_URL=https://api.openai.com
# OPENAI_API_KEY=sk-your-key-here
# OPENAI_MODEL=gpt-4

# Application Configuration
LOG_LEVEL=INFO
